<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/nav_Main">
    <fragment
        android:id="@+id/nav_Main"
        android:name="com.android.example.tanmen.Controller.Fragment.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_nav_Main_to_nav_Shuffle"
            app:destination="@id/nav_Shuffle" />
    </fragment>

    <fragment
        android:id="@+id/nav_Shuffle"
        android:name="com.android.example.tanmen.Controller.Fragment.ShuffleFragment"
        android:label="ShuffleFragment" >
        <action
            android:id="@+id/action_nav_Shuffle_to_nav_Main"
            app:destination="@id/nav_Main" />
    </fragment>
</navigation>